---
const {pathname} = Astro.url;
import { socials , info } from "../assets/data";
---
<nav class="bg-black text-white h-16 w-full flex fixed items-center px-4 py-3 top-0 z-50 md:justify-between justify-center">
<ul class="justify-items-center xl:basis-[20%] md:basis-[28%] md:grid hidden" style={{gridTemplateColumns:`repeat(${socials.length},minmax(0,1fr))`}}>
{socials.map(social=>(
    <a href={`${social.link}`} class="text-2xl opacity-50 hover:opacity-100 duration-300 ease-in cursor-pointer"><i class={social.logo}></i></a>
))}
</ul>
<ul class="grid justify-items-center gap-x-3 xl:basis-[20%] md:basis-[30%] sm:basis-[40%] xs:basis-[75%]" style={{gridTemplateColumns: `repeat(${info.length+1},minmax(0,1fr))`}}>
    <li>
        <a href="#home" class="opacity-70 hover:opacity-100 duration-300 text-[17px] font-semibold" >Home</a>
    </li>
    {pathname==='/'&&info.map(i=>(
        <li><a href={`#${i.text.toLowerCase()}`} class="opacity-70 hover:opacity-100 duration-300 text-[17px] font-semibold">{i.text}</a></li>
    ))

    }

</ul>
</nav>